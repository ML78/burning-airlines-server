<p id="notice"><%= notice %></p>

<h1>Passengers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td> <% if user.admin == false %> <%= user.name %> <% end %></td>

        <td><% if user.admin == false %> <%= link_to 'Show', user %> <% end %></td>
        <td><% if user.admin == false %> <%= link_to 'Edit', edit_user_path(user) %> <% end %></td>
        <td><% if user.admin == false %> <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %> <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
